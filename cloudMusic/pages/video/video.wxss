/* pages/video/video.wxss */
page{
  background-color:#fcfcfd;
}
.header{
  box-sizing: border-box;
  padding: 0 5px;
  margin-top: 5px;
  width: 100%;
  display: flex;
  justify-content: space-between;
  height: 40px;

}
.header image{
  width: 30px;
  height: 30px;
}

.header .search{
  text-align: center;
  line-height: 30px;
  font-size: 13px;
  color: #a7a5a5;
  width: 70%;
  height: 30px;
  background-color: #ebecec;
  border-radius: 15px;
}
.navScroll{
  display: flex;
  white-space: nowrap;
  height: 70rpx;
}
.navScroll .navItem{
  padding: 0 20rpx 0 10rpx;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.navItem .active{
  border-bottom: 2rpx solid #d43c33 ;
}

.videoScroll{
  
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  flex-wrap: wrap;
  width: 100%;
}
.videoItem{
  
  box-sizing: border-box;
  border-radius: 10px;
  width: 47%;
  background-color: white;
  margin-bottom: 10px;
  overflow: hidden;
}

.videoItem .common{
  width: 100%;
  height: 200rpx;
 
}
.videoItem .title{
  padding: 2px 5px 2px 5px ;
  font-size: 26rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  height: 35.5px;
  
}

.videoItem  .userInfo{
  padding: 2px 5px ;
  display: flex;
  align-items: center;
}
.videoItem  .userInfo image{
  width: 20px;
  height: 20px;
  border-radius: 10px;
}
.videoItem  .userInfo  text{
  padding-left: 10px;
  font-size: 12px;
 
}